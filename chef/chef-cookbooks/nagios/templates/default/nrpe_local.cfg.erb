command[check_root]=/usr/lib/nagios/plugins/check_disk -w 10% -c 5% -x none
command[check_logwarn_email]=/usr/lib/nagios/plugins/check_logwarn -p /var/log/mail.log '^.* localhost postfix/.* status=(bounced|deferred)'

<% pgsql = node[:nagios][:pgsql] -%>
<% if pgsql[:enable] -%>
command[check_pgsql]=/usr/lib/nagios/plugins/check_pgsql -H localhost -l <%= pgsql[:username] %> -p <%= pgsql[:password] %>
<% end -%>

<% mysql = node[:nagios][:mysql] -%>
<% if mysql[:enable] -%>
command[check_mysqld]=/usr/lib/nagios/plugins/check_mysql_query -q 'select 1+2' -H <%= mysql[:host] %> -u <%= mysql[:username] %> -p '<%= mysql[:password] %>' -w 3:3 -c 3:3
<% end -%>
